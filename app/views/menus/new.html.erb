<h1>(エスト)</h1>
<h3>メニュー登録</h3>
<%= form_for @menus do |f| %>

<div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :name, :size => 30 %>
</div>

<div class="field">
    <%= f.label :値段  %>
    <%= f.number_field :price, :size => 10 %>
</div>

<div class="field">
    <%= f.label :商品写真 %>
    <%= f.text_field :image, :size => 30 %>
</div>

<div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
</div>

<div class="field">
    <%= f.label :商品説明  %>
    <%= f.text_area :about, :size => "30x2" %>
</div>

<%= f.select :category, [["メイン", "main"], ["前菜", "zensai"], ["ドリンク", "drink"], ["ケーキ", "cake"]], include_blank: "どの投稿？" %>

<%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", menus_path %>

<%= stylesheet_link_tag 'new', :media => "all" %>

